{% extends 'base.j2' %}

{%from 'bootstrap5/form.html' import render_form %}

{% block title %}
{% if not edit%}
Add Movie
{% else%}
Edit Movies
{% endif %}
{% endblock %}

{% block content %}
<div class="content">
  <h1 class="heading">{{title}}</h1>
  <p class="description">Movie Rating</p>
  <form action="{{url_for('update', form=form, id=id)}}" method="POST" novalidate>
    {{render_form(form)}}
  </form>
</div>
{% endblock %}